@model List<ContactModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj Kontakt</a>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].Category)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var entry in @Model)
        {
            <tr>
                <td>
                    @entry.FirstName
                </td>
                <td>
                    @entry.LastName
                </td>
                <td>
                    @entry.Category.GetDisplayName()
                </td>
                <td>
                    <a asp-controller="Contact" asp-action="Edit" asp-route-id=@entry.Id class="btn btn-success">Edytuj</a>
                    <a asp-controller="Contact" asp-action="Details" asp-route-id=@entry.Id class="btn btn-info">Szczegóły</a>
                    <a asp-controller="Contact" asp-action="Delete" asp-route-id=@entry.Id class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <h3>Brak kontaktów...</h3>
}
