@model ContactModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Edytuj Kontakt</h2>
<form asp-action="Edit">
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">Imię</label>
        <input class="form-control" asp-for="FirstName"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Nazwisko</label>
        <input class="form-control" asp-for="LastName"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="PhoneNumber">Telefon</label>
        <input class="form-control" asp-for="PhoneNumber"/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="BirthDate">Data urodzenia</label>
        <input class="form-control" asp-for="BirthDate"/>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Category">Kategoria</label>
        <select class="form-control" asp-items="@Html.GetEnumSelectList<CategoryModel>()"
                asp-for="Category"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-outline-primary">Zapisz zmiany</button>


</form>
